<div class="main">
    <div class="shopCar">
        <div class="header">
            <!--            X-->
            <a href="/" class="x fa fa-2x fa-close"></a>
            <div class="nav_shop">
                <div class="nav_title_conter">MY ORDERS</div>

            </div>
            <div class="nav_logo">
                <a href="#">
                    <div class="nav_check nav_check_sure" id="current_nav">
                        <img class="logo_size" src="./images/alarm_clock.png" alt="">
                        <span class="logo_title">CURRENT</span>
                    </div>
                </a>

                <div class="line"></div>

                <a href="#">
                    <div class="nav_check" id="previous_nav">
                        <img class="logo_size" src="./images/clock.png" alt="">
                        <span class="logo_title">PREVIOUS</span>
                    </div>
                </a>
            </div>

        </div>
        <div class="h_k_b"></div>

        <!-- order Items -->
        <div class="conter">

            {{#each current_orders}}

                <a href="/customer/my_orders/current_order/{{this._id}}">
                    <div class="current_item current_item my-round-border" style="max-width: 90rem;height:21rem;margin-top:20px;padding-top:10px;background-color: bisque;">
                        <div class="card-header" style="display:flex; justify-content: space-around;">
                            <span style="font-size: 20px;"><b>{{this.van_title}}</b></span>
                            <span style="font-size: 20px;"><b>$ {{this.total_price}}</b></span>
                        </div>

                        <div style="padding-top: 0px;padding-bottom: 0px;">
                            <hr style="max-width:100%;height:1px;border-width:0;background-color:gray;">
                        </div>

                        <h3 class="card-title" style="text-align:center;">{{this.partial_id}}</h3>
                        <p class="card-text" style="text-align:center;text-align: center;font-size: 16px;">{{this.start_date}}</p>

                        <div class="card-text" style="display:flex; justify-content: center;">
                            <span style="font-size: 15px;">{{this.start_clock}}&emsp;</span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                            </svg>
                            <span style="font-size: 15px;">&emsp;Now&emsp;</span>
                        </div>
                        <div class="h5 pull-right" style="justify-content: center;">More Details >>&emsp;</div>
                    </div>
                </a>
            {{/each}}

            {{#each previous_orders}}

                <a href="/customer/my_orders/previous_order/{{this._id}}">
                    <div class="previous_item my-round-border" style="display: none; max-width: 90rem;height:21rem;margin-top:20px;padding-top:10px;background-color: #bcefb9;">
                        <div class="card-header" style="display:flex; justify-content: space-around;">
                            <span style="font-size: 20px;"><b>{{this.van_title}}</b></span>
                            <span style="font-size: 20px;"><b>$ {{this.total_price}}</b></span>
                        </div>

                        <div style="padding-top: 0px;padding-bottom: 0px;">
                            <hr style="max-width:100%;height:1px;border-width:0;background-color:gray;">
                        </div>

                        <h3 class="card-title" style="text-align:center;">{{this.partial_id}}</h3>
                        <p class="card-text" style="text-align:center;text-align: center;font-size: 16px;">{{this.start_date}}</p>

                        <div class="card-text" style="display:flex; justify-content: center;">
                            <span style="font-size: 15px;">{{this.start_clock}}&emsp;</span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                            </svg>
                            <span style="font-size: 15px;">&emsp;{{this.end_clock}}</span>
                        </div>
                        <div class="h5 pull-right" style="justify-content: center;">More Details >>&emsp;</div>
                    </div>
                </a>


            {{/each}}
        </div>
        <div class="k_b"></div>
    </div>
    <div class="left_nav">
        <img src="./images/drink.png" alt="">
        <sapn>Snacks&nbsp;in&nbsp;a&nbsp;Van</sapn>
    </div>
</div>

<script>
    // set auto refresh
    setTimeout(function(){location.reload()},30000);
    // nav label function
    let current_nav = $('#current_nav');
    let previous_nav = $('#previous_nav');

    let current_item = $('.current_item');
    let previous_item = $('.previous_item');

    current_nav.click(function () {

    if(!current_nav.hasClass("nav_check_sure")) {

    current_nav.toggleClass("nav_check_sure")
    previous_nav.toggleClass("nav_check_sure")

    current_item.toggle()
    previous_item.toggle()
}
})

    previous_nav.click(function () {

    if(!previous_nav.hasClass("nav_check_sure")) {
    current_nav.toggleClass("nav_check_sure")
    previous_nav.toggleClass("nav_check_sure")

    current_item.toggle()
    previous_item.toggle()
}
})
</script>