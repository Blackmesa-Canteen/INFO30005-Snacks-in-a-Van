    let default_user_point = new BMapGL.Point(user_pos_obj.x_pos, user_pos_obj.y_pos);
    map.centerAndZoom(default_user_point, 18);

    let options = {
        //Whether to use high precision equipment
        enableHighAccuracy:true,
        timeout:3000,
        maximumAge:0
    };

    /* using geo API*/
    const geo_API_settings = {
        "async": true,
        "crossDomain": true,
        "url": "https://api.getgeoapi.com/api/v2/ip/check?api_key=0e33f90ed8de88b9f3e2d8e3848c1ec7adee696d",
        "method": "GET",
        "headers": {
            "x-rapidapi-key": "0e33f90ed8de88b9f3e2d8e3848c1ec7adee696d",
            "x-rapidapi-host": "ip-geo-location.p.rapidapi.com"
        }
    };

    // User info window
    let userContent = `<div><h4 style='margin:0 0 5px 0;'>{{{customer_username}}}</h4>
    <a href="" id="btn-van" style="z-index: 999"></a>
    </div>`;
    let userInfoWindow = new BMapGL.InfoWindow(userContent);

    /**
     * Locating
     */
    let longitude = 0;
    let latitude = 0;
    let accuracy = 0;
    let user_point = default_user_point;

    /* get user location via geolocation */
    navigator.geolocation.getCurrentPosition(position => {
        longitude = position.coords.longitude;
        latitude = position.coords.latitude;
        accuracy = position.coords.accuracy;

        console.log("user location WGS84 GPS standard coordinate:" + longitude + "," + latitude);
        console.log("accuracy：" + accuracy);

        if(accuracy > 10000) {
            /** if accuracy is too low, use pure IP locating service*/

            /* using geo API*/
            $.ajax(geo_API_settings).done(function (response) {
                longitude = response.location.longitude;
                latitude = response.location.latitude;
                let isSuccessful = response.status

                if (isSuccessful != null && isSuccessful === "success") {
                    console.log("Geolocation service is not accurate, using pure IP locating...")
                    console.log("Pure IP locating user location WGS84 GPS standard coordinate:" + longitude + "," + latitude);

                    // AJAX post to store user location to session
                    $.post('/get_location', {x_pos: longitude, y_pos: latitude});

                    user_pos_obj.x_pos = longitude;
                    user_pos_obj.y_pos = latitude;
                }
                else
                {
                    /* use default location */
                    console.log("location service failure, use default location")
                    longitude = user_pos_obj.x_pos;
                    latitude = user_pos_obj.y_pos;
                    $.post('/get_location', {x_pos: user_pos_obj.x_pos, y_pos: user_pos_obj.y_pos});
                }

                user_point = new BMapGL.Point(user_pos_obj.x_pos, user_pos_obj.y_pos);

                /* translate coordinate and draw */
                let pointArr = []

                pointArr.push(user_point)

                /**
                 * Baidu coordinate uses BD-09 secondary encryption measures. The coordinate system of the external interface of
                 * Baidu is not the real longitude and latitude collected by GPS, which needs to be converted through
                 * the coordinate conversion interface.
                 * */
                convertor.translate(pointArr, 1, 5, data => {
                    if(data.status === 0) {

                        map.centerAndZoom(data.points[0], 18);

                        let userMarker = new BMapGL.Marker(data.points[0], {icon: redIcon});

                        // click event
                        userMarker.addEventListener('click', function () {
                            this.openInfoWindow(userInfoWindow);

                        });

                        // draw the marker
                        map.addOverlay(userMarker);
                    }
                });
            });

            alert('Geolocation service is not supported on this browser. Using pure IP address locating service, which could cause low accuracy.')
        }
        else
        {
            /** if Geolocation works fine */
            // AJAX post to store user location to session
            $.post('/get_location', {x_pos: longitude, y_pos: latitude});

            user_pos_obj.x_pos = longitude;
