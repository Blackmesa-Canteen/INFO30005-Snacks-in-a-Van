                user_point = new BMapGL.Point(user_pos_obj.x_pos, user_pos_obj.y_pos);

                /* translate coordinate and draw */
                let pointArr = []

                pointArr.push(user_point)

                convertor.translate(pointArr, 1, 5, data => {
                    if(data.status === 0) {

                        map.centerAndZoom(data.points[0], 18);

                        let userMarker = new BMapGL.Marker(data.points[0], {icon: redIcon});

                        // click event
                        userMarker.addEventListener('click', function () {
                            this.openInfoWindow(userInfoWindow);

                        });

                        // draw the marker
                        map.addOverlay(userMarker);
                        alert('Geolocation service is not supported on this browser. Using pure IP address locating service, which could cause low accuracy.')
                    }
                });
            }
            else
            {
                /** if the location result is not correct */
                alert('geolocation locating failed. Make sure your Browser supports geolocation.')
                map.centerAndZoom(default_user_point, 18);
                let userMarker = new BMapGL.Marker(default_user_point, {icon: redIcon});

