<script type="text/javascript">

    // Get user's location demo
    // at the final release, user's location is defined here
    /** IMPORTANT:
     *
     * Safari browser requires SSL of the website to get access to HTML5 Geolocation API ! (make the website into https)
     * error message: "Access to geolocation was blocked over insecure connection to http://localhost:8080."
     *
     * Heroku is in https, don't worry.
     *
     * */
    navigator.geolocation.getCurrentPosition(position => {
        let latitude = position.coords.latitude;
        let longitude = position.coords.longitude;
        let accuracy = position.coords.accuracy;

        console.log("locating demo: user location：" + latitude + "," + longitude);
        console.log("accuracy：" + accuracy);

        // AJAX post to store user location to session
        $.post('/get_location', { x_pos:  longitude, y_pos: latitude});

    }, positionError => {
        alert('locating failed. Make sure your Browser supports geolocation.')
    });


    var map = new BMapGL.Map("map", {drawMargin: 100, drawer: 'BMAP_SVG_DRAWER_FIRST' });

    let redIcon = new BMapGL.Icon("./images/redmark.png", new BMapGL.Size(25, 25));
    let blueIcon = new BMapGL.Icon("./images/van.png", new BMapGL.Size(25, 25));
    console.log("asdasd");

    // init map points (static)
    // var user_point = new BMapGL.Point(144.95782936759818,-37.79872198514221);
    // var van1_point = new BMapGL.Point(144.9597098711528,-37.79830229214481);
