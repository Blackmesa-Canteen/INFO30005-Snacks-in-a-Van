<script>
    let url = `{{url}}`;
    let van_name = `{{van}}`;

    let open_van = () => {

        let van_address = document.getElementById("location-address").value;
        let van_location_description = document.getElementById("location-description").value;
        let JSON_form = {"van_adress": van_address, "van_location_description": van_location_description};

        axios.post( `${url}/vendor/van_open/${van_name}`, JSON_form).then(res => {
            console.log(`${res.statusText} : ${res.status}`);
            window.location.href = `${url}/vendor/dashboard`;
        }).catch(err => {console.log(err);});
    }
    
</script>
